# automagic for outputs (bindswitch is available since sway-1.1)
set $laptop eDP-1
bindswitch --reload --locked lid:off exec sh -c "sleep 3; swaymsg 'output $laptop enable'"
bindswitch --reload --locked lid:on  exec sh -c "sleep 3; swaymsg 'output $laptop disable'"

