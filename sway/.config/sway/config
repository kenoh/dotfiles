# disallow left-clicking titlebar (avoids mis-changing active window
# when e.g. changing firefox tab)
bindsym button1 nop
bindsym --release button1 nop

# general
set $term kitty -1
set $term0 kitty

# title rewrite
for_window [class="."] title_format "<b><i>%class</i></b> :: %title"
for_window [app_id="."] title_format "<b>%class</b> :: %title"
for_window [app_id="org.mozilla.firefox"] title_format \
                    "<span bgcolor='darkorange' color='white'>FF</span> %title"
for_window [app_id="net.thunderbird.Thunderbird"] title_format \
                    "<span bgcolor='blue' color='white'>TB</span> %title"
for_window [app_id="kitty"] title_format \
                    "<span bgcolor='black' color='white'>KT</span> %title"
for_window [app_id="libreoffice-writer"] title_format \
                    "<span bgcolor='white' color='blue'>Write</span> %title"
for_window [app_id="libreoffice-calc"] title_format \
                    "<span bgcolor='white' color='darkgreen'>Calc</span> %title"
for_window [app_id="qpdfview"] title_format \
                    "<span bgcolor='white' color='darkred'>PDF</span> %title"
for_window [class="Emacs"] title_format \
                    "<span bgcolor='purple' color='white'>EM</span> %title"

